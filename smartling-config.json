{
    "locales": [
        {
            "smartling" : "zh-CN",
            "application" : "zh.CN"
        },
        {
            "smartling" : "da-DK",
            "application" : "da.DK"
        },
        {
            "smartling" : "nl-NL",
            "application" : "nl.NL"
        }
     ],
     "resourceSets": [
         {
             "type"                      : "json",
             "authorizeContent"          : "false",
             "pathRegex"                 : "(?<path>.*)\\.en\\.US\\.json",
             "translationPathExpression" : "${path}${originalFile.baseNamereplaceAll('.en.US$', '_'+locale)}}.${originalFile.extension}",
             "translationCommitMessage"  : "Translation task for ${originalFile.name} to ${locale}"
         }

     ]
}
